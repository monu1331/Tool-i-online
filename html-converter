<body>
  <div class="wrap">
    <header>
      <div class="logo">
        <div class="logo-mark">Ti</div>
        <div>
          <h1>Markdown → HTML</h1>
          <p class="lead">Live Markdown to HTML converter. Sanitize output, copy or download HTML. Theme: green.</p>
        </div>
      </div>
    </header>

    <main class="card">
      <div class="toolbar">
        <div style="display:flex;gap:8px;align-items:center">
          <button id="loadSample" class="btn ghost" title="Load sample markdown">Sample</button>
          <button id="clearBtn" class="btn ghost" title="Clear editor">Clear</button>
          <button id="uploadMd" class="btn ghost" title="Upload .md file">Upload</button>
          <input id="fileInput" type="file" accept=".md,.markdown" style="display:none" />
        </div>

        <div style="flex:1"></div>

        <div class="options">
          <label style="display:flex;align-items:center;gap:8px"><input type="checkbox" id="sanitize" checked> Sanitize</label>
          <label style="display:flex;align-items:center;gap:8px"><input type="checkbox" id="fullHtml"> Export full HTML</label>
          <select id="stylePreset" class="select">
            <option value="none">No stylesheet</option>
            <option value="github">GitHub-like</option>
            <option value="article">Simple article</option>
          </select>

          <button id="copyBtn" class="btn ghost" title="Copy HTML"><i class="fa-solid fa-copy"></i> Copy</button>
          <button id="downloadBtn" class="btn primary" title="Download HTML"><i class="fa-solid fa-download"></i> Download</button>
        </div>
      </div>

      <div style="padding:12px">
        <div class="grid">
          <section class="panel editor-area" aria-label="Markdown editor">
            <label style="font-weight:600">Markdown</label>
            <textarea id="mdInput" placeholder="# Start typing Markdown..." spellcheck="false"></textarea>
            <div style="display:flex;justify-content:space-between;align-items:center">
              <div class="small" id="charCount">0 chars</div>
              <div class="small">Live preview on the right</div>
            </div>
          </section>

          <aside class="panel preview-area" aria-label="HTML preview">
            <label style="font-weight:600">HTML Preview</label>
            <div id="preview" class="preview" aria-live="polite"></div>
            <details style="margin-top:8px"><summary style="cursor:pointer">Generated HTML (click to view)</summary>
              <pre id="htmlOutput" style="white-space:pre-wrap;word-break:break-word;padding:12px;background:#fafafa;border-radius:6px;margin-top:8px;max-height:240px;overflow:auto"></pre>
            </details>
          </aside>
        </div>
      </div>

      <footer class="small">All processing happens in your browser — nothing is uploaded. Use sanitized output for embedding in web pages.</footer>
    </main>
  </div>

  <script>
    // Wait for marked & DOMPurify loaded
    document.addEventListener('DOMContentLoaded', () => {
      const mdInput = document.getElementById('mdInput');
      const preview = document.getElementById('preview');
      const htmlOutput = document.getElementById('htmlOutput');
      const charCount = document.getElementById('charCount');
      const sanitizeCheckbox = document.getElementById('sanitize');
      const fullHtml = document.getElementById('fullHtml');
      const copyBtn = document.getElementById('copyBtn');
      const downloadBtn = document.getElementById('downloadBtn');
      const loadSample = document.getElementById('loadSample');
      const clearBtn = document.getElementById('clearBtn');
      const uploadMd = document.getElementById('uploadMd');
      const fileInput = document.getElementById('fileInput');
      const stylePreset = document.getElementById('stylePreset');

      // sample markdown
      const sample = `# Sample Document\n\nThis is a **sample** markdown document.\n\n- Item one\n- Item two\n\n> A blockquote.\n\n\` + "`code`" + ` snippet.\n\n![Kitten](https://placekitten.com/800/300)\n`;

      // debounce
      function debounce(fn, wait=180){ let t; return (...args)=>{ clearTimeout(t); t=setTimeout(()=>fn(...args), wait); }; }

      function render(){
        const md = mdInput.value || '';
        charCount.textContent = `${md.length} chars`;
        // parse markdown with marked
        let html = '';
        try{
          html = marked.parse(md, {mangle:false, headerIds:true});
        }catch(e){ html = '<pre>Error parsing markdown</pre>'; }
        // sanitize if requested
        if(sanitizeCheckbox.checked && window.DOMPurify){ html = DOMPurify.sanitize(html); }
        preview.innerHTML = html;
        htmlOutput.textContent = html;
      }

      const doRender = debounce(render, 150);

      mdInput.addEventListener('input', doRender);
      sanitizeCheckbox.addEventListener('change', doRender);

      // initial sample
      mdInput.value = sample;
      render();

      // buttons
      loadSample.addEventListener('click', ()=>{ mdInput.value = sample; render(); mdInput.focus(); });
      clearBtn.addEventListener('click', ()=>{ if(!confirm('Clear editor?')) return; mdInput.value=''; render(); });

      uploadMd.addEventListener('click', ()=> fileInput.click());
      fileInput.addEventListener('change', (e)=>{
        const f = e.target.files && e.target.files[0]; if(!f) return; const reader = new FileReader(); reader.onload = ()=>{ mdInput.value = reader.result; render(); }; reader.readAsText(f); fileInput.value = '';
      });

      copyBtn.addEventListener('click', async ()=>{
        const html = fullHtml.checked ? buildFullHtml(htmlOutput.textContent) : htmlOutput.textContent;
        try{ await navigator.clipboard.writeText(html); copyBtn.textContent = 'Copied'; setTimeout(()=> copyBtn.innerHTML = '<i class="fa-solid fa-copy"></i> Copy',1000); }catch(e){ alert('Copy failed — your browser may block clipboard'); }
      });

      downloadBtn.addEventListener('click', ()=>{
        const html = fullHtml.checked ? buildFullHtml(htmlOutput.textContent) : htmlOutput.textContent;
        const blob = new Blob([html], {type:'text/html'});
        const a = document.createElement('a'); a.href = URL.createObjectURL(blob); a.download = 'document.html'; document.body.appendChild(a); a.click(); a.remove(); URL.revokeObjectURL(a.href);
      });

      function buildFullHtml(bodyHtml){
        let stylesheet = '';
        if(stylePreset.value==='github'){
          stylesheet = `<style>body{font-family:Inter,system-ui,Segoe UI,Roboto,Arial;margin:28px;color:#111} pre{background:#24292e;color:#fff;padding:12px;border-radius:6px} code{background:#f6f8fa;padding:2px 6px;border-radius:6px} img{max-width:100%;height:auto}</style>`;
        }else if(stylePreset.value==='article'){
          stylesheet = `<style>body{font-family:Georgia,serif;margin:36px;color:#111;max-width:800px} h1,h2,h3{color:#184e47} pre{background:#f3f4f3;padding:12px;border-radius:6px} img{max-width:100%;height:auto}</style>`;
        }
        return `<!doctype html>\n<html lang="en">\n<head><meta charset="utf-8"/><meta name="viewport" content="width=device-width,initial-scale=1"/>${stylesheet}</head>\n<body>\n${bodyHtml}\n</body>\n</html>`;
      }

      // style preset change updates nothing immediately for preview but affects download/fullHtml
      stylePreset.addEventListener('change', ()=>{/* noop */});

      // keyboard: Ctrl/Cmd+Enter to copy html, Ctrl/Cmd+S to download
      document.addEventListener('keydown', (e)=>{
        if((e.ctrlKey||e.metaKey) && e.key === 'Enter'){ e.preventDefault(); copyBtn.click(); }
        if((e.ctrlKey||e.metaKey) && e.key.toLowerCase()==='s'){ e.preventDefault(); downloadBtn.click(); }
      });

    });
  </script>
</body>
</html>
